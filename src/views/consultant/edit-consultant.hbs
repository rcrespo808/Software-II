{{#each errors}}
<div class="alert alert-danger alert-dismissible fade show" role="alert">
  {{text}}
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
    <span aria-hidden="true">&times;</span>
  </button>
</div>
{{/each}}

<div class="col-md-4 mx-auto">
  <div class="card">
    <div class="card-header">
      <h3>Editar Consultante</h3>
    </div>
    <div class="card-body">
      <form action="/consultant/edit-consultant/{{consultant._id}}?_method=PUT" method="POST">
        <input type="hidden" name="_method" value="PUT">
        <div class="form-group">
          <input type="text" name="firstName" class="form-control" value="{{consultant.firstName}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="lastName" class="form-control" value="{{consultant.lastName}}"/>
        </div>
        <div class="form-group">
          <input type="text" name="gender" class="form-control" value="{{consultant.gender}}"/>
        </div>
        <div class="form-group">
          <input type="int" name="age" class="form-control" value="{{consultant.age}}"/>
        </div>
        <div class="form-group">
          <input type="date" name="birthDate" class="form-control" value="{{consultant.birthDate}}"/>
        </div>
        <div class="form-group">
          <button class="btn btn-primary btn-block" type="submit">
            Guardar
          </button>
          <button class="btn btn-primary btn-block" type="reset">
            Reset
          </button>
        </div>
      </form>
    </div>
  </div>
</div>
