<div class="row">
  {{#each consultants}}
  <div class="col-md-3">
    <div class="card">
      <div class="card-body">
        <h4 class="card-title d-flex justify-content-between align-items-center">
          {{ firstName }} {{ lastName }}<a href="/consultant/edit/{{_id}}"><i class="fas fa-edit"></i></a>
        </h4>
        <p>{{ age }} year old, {{ gender }}</p>
        <!-- DELETE REQUEST -->
        <form action="/consultant/delete/{{_id}}?_method=DELETE" method="POST">
          <input type="hidden" name="_method" value="DELETE">
          <button type="submit" class="btn btn-danger btn-block btn-sm">Eliminar</button>
        </form>
      </div>
    </div>
  </div>
  {{else}}
  <div class="card mx-auto">
    <div class="card-body">
      <h1>Hola {{user.name}}</h1>
      <p clsss="lead">Aun no ha registrado ningun consultante</p>
      <a href="/consultant/add" class="btn btn-success btn-block">Agrega Uno!</a>
    </div>
  </div>
  {{/each}}
</div>