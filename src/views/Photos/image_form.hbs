<div class="row">
   <div class="col-md-4">
        
        <div class="card">
            <h1>Hola {{user.name}}</h1>
                 
            <div class="card-   ">
         
                <form action="/images/add" method="POST" enctype="multipart/form-data">
                     <div class="form-group">
                     
                      <!--<input type="text" name="ID_Ter" class="form-control"    value= {{user.id}} autofocus>}-->
                    </div>
                        <input type="radio" name="ID_Ter" value={{user.id}}>{{user.name}}


                     <div class="form-group">
                        
                     <select id="ID_Pac" name="ID_Pac">
                      {{#each users}}
                     
                      
                     <tr>  
                    <option value= {{_id}}>{{name}}</option>
                    </tr>
                     {{/each}}
                    </select>
                   
                    </div>


                      <div class="form-group">
                     <select id="TipoArchivo" name="TipoArchivo">
                    <option value="Archivo">Archivo</option>
                    <option value="Foto">Foto</option>
                    <option value="Video">Video</option>
                    <option value="Audio">Audio</option>
                    </select>
                         </div>

                         
                    <div class="form-group">
                        <input type="text" name="title" class="form-control" placeholder="Image Title" autofocus>
                    </div>
                    
                    
                    

                    <div class="form-group">
                        <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
                    </div>
                    <div class="input-group mb-5">
                        <div class="custom-file">
                            <input type="file" name="image" class="custom-file-input" id="inputGroupFile01"
                                aria-describedby="inputGroupFileAddon01">
                            <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                        </div>
                    </div>
                    <button class="btn btn-primary">
                        Upload Photo
                    </button>
                </form>
            </div>
        </div>
    </div>
    <div class="col-md-8">
        <table class="table">
            <thead>
                <tr>
                    <th>ID_terapeuta</th>
                    <th>ID_paciente</th>
                    <th>Tipo de archivo</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th>Operations</th>
                </tr>
            </thead>
            <tbody>
                {{#each photos}}
                <tr>
                    <td>{{ID_Ter}}</td>
                    <td>{{ID_Pac}}</td>
                    <td>{{TipoArchivo}}</td>
                    <td>{{title}}</td>
                    <td>{{description}}</td>
                    <td>
                        <a href="{{imageURL}}" target="_blank" class="btn btn-primary">View</a>
                        <a   class="btn btn-primary" target="_blank" onclick='alert("Nose actualizar mongo, pero prometo hacerlo para la tecno :(")' >update</a>
                        <a href="/images/download/{{_id}}" download="new" target="_blank" class="btn btn-primary">Descargar </a>
                        <a href="/images/delete/{{_id}}" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>


    