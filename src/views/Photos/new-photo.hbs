
<div class="col-md-4 mx-auto">
    <div class="card mt-4 text-left">      
        <div class="card-header text-center">
            <h3> Subir </h3>
        </div>
        <div>          
            <form action="/images/add" method="POST" enctype="multipart/form-data">
                <div class="form-group">
                    Terapeuta: 
                    <input type="hidden" name="ID_Ter" value={{user.id}} checked>
                    {{user.name}}
                </div>
                <div class="form-group"> 
                    Consultant:                     
                    <select id="ID_Pac" name="ID_Pac">
                        {{#each users}}
                            {{#if isConsultant}}
                            <tr>  
                                <option value={{_id}}> {{name}} </option>
                            </tr>
                            {{/if}}
                        {{/each}}
                    </select>
                </div>
                <div class="form-group">
                    Tipo:
                    <select id="TipoArchivo" name="TipoArchivo">
                    <option value="Archivo">Archivo</option>
                    <option value="Foto">Foto</option>
                    <option value="Video">Video</option>
                    <option value="Audio">Audio</option>
                    </select>
                </div>                        
                <div class="form-group">
                    <input type="text" name="title" class="form-control" placeholder="Image Title" autofocus>
                </div>
                <div class="form-group">
                    <textarea name="description" class="form-control" placeholder="Image Description"></textarea>
                </div>
                <div class="input-group mb-5">
                    <div class="custom-file">
                        <input type="file" name="image" class="custom-file-input" id="inputGroupFile01"
                            aria-describedby="inputGroupFileAddon01">
                        <label class="custom-file-label" for="inputGroupFile01">Choose file</label>
                    </div>
                </div>
                <button class="btn btn-primary">
                    Upload Photo
                </button>
            </form>
        </div>
    </div>
</div>